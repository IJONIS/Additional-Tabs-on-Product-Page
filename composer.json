{
    "name": "ijonis/additional-product-tab",
    "description": "Erweitert die Produktdetailseite um ein zusätzliches, konfigurierbares Tab. Ermöglicht die Anzeige von Custom Fields in einem separaten Tab auf der Produktdetailseite.",
    "version": "1.0.1",
    "type": "shopware-platform-plugin",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "IJONIS",
            "email": "hi@ijonis.com"
        }
    ],
    "require": {
        "shopware/core": "~6.6.0",
        "shopware/storefront": "~6.6.0"
    },
    "extra": {
        "shopware-plugin-class": "AdditionalProductTab\\AdditionalProductTab",
        "label": {
            "de-DE": "Zusätzliches Produkt-Tab",
            "en-GB": "Additional Product Tab"
        },
        "description": {
            "de-DE": "Fügt ein zusätzliches, konfigurierbares Tab auf der Produktdetailseite hinzu. Ideal für die Anzeige von Custom Fields.",
            "en-GB": "Adds an additional, configurable tab to the product detail page. Perfect for displaying custom fields."
        },
        "manufacturerLink": {
            "de-DE": "https://github.com/IJONIS/Additional-Tabs-on-Product-Page",
            "en-GB": "https://github.com/IJONIS/Additional-Tabs-on-Product-Page"
        },
        "supportLink": {
            "de-DE": "https://github.com/IJONIS/Additional-Tabs-on-Product-Page/issues",
            "en-GB": "https://github.com/IJONIS/Additional-Tabs-on-Product-Page/issues"
        }
    },
    "autoload": {
        "psr-4": {
            "AdditionalProductTab\\": "src/"
        }
    }
}